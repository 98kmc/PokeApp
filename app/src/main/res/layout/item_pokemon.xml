<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivPok"
        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvPokName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="nombre pok"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/ivPok"
        app:layout_constraintStart_toEndOf="@id/ivPok"
        android:layout_marginStart="3dp"/>
    <TextView
        android:id="@+id/tvPokAtribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="nombre pok"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvPokName"
        app:layout_constraintStart_toEndOf="@id/ivPok"
        android:layout_marginStart="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>